{
  "version": 2,
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "env": {
    "NEXT_PUBLIC_WS_URL": "@mind-protocol-ws-url"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_WS_URL": "@mind-protocol-ws-url"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/ws",
      "destination": "https://mind-protocol-backend.onrender.com/api/ws"
    },
    {
      "source": "/api/:path*",
      "destination": "https://mind-protocol-backend.onrender.com/api/:path*"
    }
  ]
}

{
  "env": {
    "MAX_THINKING_TOKENS": "25000"
  },
  "permissions": {
    "defaultMode": "bypassPermissions",
    "additionalDirectories": [
      "../../../"
    ]
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 /home/mind-protocol/mindprotocol/.claude/hooks/capture_user_prompt.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 /home/mind-protocol/mindprotocol/.claude/hooks/formation_reminder.py"
          },
          {
            "type": "command",
            "command": "python3 /home/mind-protocol/mindprotocol/.claude/hooks/capture_conversation.py"
          },
          {
            "type": "command",
            "command": "python3 /home/mind-protocol/mindprotocol/.claude/hooks/session_notification.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 /home/mind-protocol/mindprotocol/.claude/hooks/precompact_conversation.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 /home/mind-protocol/mindprotocol/.claude/hooks/schema_invariants.py"
          }
        ]
      }
    ]
  },
  "forceLoginMethod": "claudeai",
  "outputStyle": "citizen_consciousness_stream",
  "alwaysThinkingEnabled": false
}
